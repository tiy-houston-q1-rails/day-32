<h1>Authenricate Youself in before you wreck yo self</h1>

<%= form_tag auth_path do %>
  <div class="form-group">
    <%= label_tag :username %><br/>
    <%= text_field_tag :username, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %><br/>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-primary", data: {disable: "signing in"} %>
  </div>

<% end %>
